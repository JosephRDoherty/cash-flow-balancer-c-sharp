<style>

    body {
        overflow-x: hidden;
        width: 100%;
    }

    #razorMagic {
        background-color: green;
        display: grid;
        grid-template-columns:[line1] 25% [line2] 25% [line3] 25%;
        gap: 20px;
        padding: 1em;
        border-radius: 20px;
        justify-content: space-between;
    }

    .lasag {
        background-color: antiquewhite;
        padding: 1em;
        border-radius: 20px;
        justify-self: center;

    }

    #productGrid {
        display: flex;
        align-items: center;
        justify-content:center;
    }

    .gridDiv {
        display: grid;
        grid-template-rows: auto;
        grid-template-columns: auto;
        padding: 3em;
        gap: 1em;
        justify-content: center;
    }

    .imageBox {
        background-color: darkolivegreen;
        aspect-ratio: 1/1;
        width: clamp(30vw, 70vw, 90vw);
        height: auto;
        border-radius: 25px;
        transition: all .25s ease-in-out;
    }

    .description {
        margin-left: 1em;
        margin-right: 1em;
        display: flex;
        flex-direction:column;
        justify-content: space-around;
        transition: all .25s ease-in-out;
    }

    .description h5 {
        font-size: 1.5rem;
        text-align:center;
    }

    .description p {
       /* align-self: center;
        justify-self: flex-start;*/
        text-align: center;
        font-weight: bold;
        color: cadetblue;
        font-size: 2rem;
        transition: all .4s ease-in-out;
    }

    .product:hover .imageBox {
        background-color: darksalmon;
        box-shadow: .2rem .2rem orangered;
    }

    .product:hover .description {
        color: orangered;
    }

    .product:hover .description p {
        color: black;
    }

    /*Desktop and Tablet CSS*/
    @@media only screen and (min-width:600px) {
        .gridDiv {
            grid-template-columns: auto auto;
        }

        .imageBox {
            width: clamp(20vw, 40vw, 70vw);
        }
    }

    @@media only screen and (min-width: 992px) {
        .gridDiv {
            grid-template-columns: auto auto auto;
        }

        .imageBox {
            width: clamp(20vw, 25vw, 30vw);
        }

        .description p {
            font-size: 1.5rem;
        }
    }

</style>


